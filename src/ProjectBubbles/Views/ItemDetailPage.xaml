<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectBubbles.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Login:" FontSize="Medium" />
        <Label Text="{Binding Item.UserName}" FontSize="Small"/>
        <Label Text="Location:" FontSize="Medium" />
        <Label Text="{Binding Item.Location}" FontSize="Small"/>
    </StackLayout>
</ContentPage>